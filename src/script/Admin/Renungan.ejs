    <div class="container">
      <h3 class="mt-3" tyle="text-align: center">RENUNGAN MINGGU</h3>

      <!-- <div class="d-flex justify-content-center align-items-center"> -->
      <div class="row">
        <div class="card-group">
          <% for (let user of users) { %>
          <div class="col-sm">
            <div class="card mt-4">
              <img src="/img/logo gereja.png" class="card-img-top" alt="..." />
              <div class="card-body">
                <h5 class="card-title"><%= user.judul_renungan %></h5>
                <!-- 
                  <p class="card-text"><%= user.isi_renungan %></p> 
                  bikin dia pindah halaman dan baca 
                -->
                <a href="ArtikelRenungan/<%=user.id_renungan %>"> Baca Selengkapnya</a>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
      <!-- </div> -->
    </div>

    <!-- Footer -->
    <footer class="footer mt-4">
      <h4>Love Youth GPI Jalan Suci</h4>
    </footer>

    <!-- Optional JavaScript -->
