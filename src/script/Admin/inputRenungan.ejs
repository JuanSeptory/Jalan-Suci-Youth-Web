        </ul>
      </div>

      <div class="col-sm-10 mt-2 pr-3 pt-4">
        <h3 class="mb-4" style="text-align: center">INPUT RENUNGAN</h3>
        <form action="/inputRenungan" method="post">
          <div class="JudulRenungan mb-3">
            <label for="postTitle"> Judul :</label>
            <input type="text" name="postTitle" id="JudulRenungan" />
          </div>
          <div class="IsiRenungan">
            <label for="postIsi"> Isi Renungan :</label>
            <textarea name="postIsi" id="IsiRenungan"></textarea>
          </div>

          <button type="submit" class="btn btn-outline-primary mt-3">Upload</button>
        </form>
      </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
